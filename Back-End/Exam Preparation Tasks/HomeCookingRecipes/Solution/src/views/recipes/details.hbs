{{setTitle 'Home Cooking Recipes | Details'}}

<article class="recipe-detail">
    <img src="{{recipe.imageUrl}}" alt="{{recipe.title}}">
    <h2>{{recipe.title}}</h2>
    <p>{{recipe.description}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Ingredients:</h3>
    <p>{{recipe.ingredients}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Instructions:</h3>
    <p>{{recipe.instructions}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>People Who Recommend: {{recipe.recommendList.length}}</h3>
</article>


{{#if user}}
<div class="command">
    {{#if isOwner}}
    <a href="/recipes/{{recipe.id}}/edit">Edit</a>
    <a href="/recipes/{{recipe.id}}/delete">Delete</a>

    {{else}}

    {{#if isRecommended}}
    <p>You've already recommended this recipe!</p>
    {{else}}
    <a href="/recipes/{{recipe.id}}/recommend">Recommend</a>
    {{/if}}

    {{/if}}
</div>
{{/if}}