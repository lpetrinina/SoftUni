{{setTitle 'TechStore | Details'}}

<section class="details-hero">
    <div class="container">
        <h2>Laptop Details</h2>
    </div>
</section>

<section class="details-content">
    <div class="container">
        <div class="product-details">

            <div class="product-image">
                <img src="{{device.imageUrl}}" alt="Laptop">
            </div>

            <div class="product-info">
                <h3>Brand: {{device.brand}}</h3>
                <p><strong>Model:</strong> {{device.model}}</p>
                <p><strong>Hard Disk:</strong> {{device.hardDisk}}</p>
                <p><strong>Screen Size:</strong> {{device.screenSize}} inches</p>
                <p><strong>RAM:</strong> {{device.ram}}</p>
                <p><strong>Operating System:</strong> {{device.operatingSystem}}</p>
                <p><strong>CPU:</strong> {{device.cpu}}</p>
                <p><strong>GPU:</strong> {{device.gpu}}</p>
                <p><strong>Price:</strong> ${{device.price}}</p>
                <p><strong>Color:</strong> {{device.color}}</p>
                <p><strong>Weight:</strong> {{device.weight}}</p>
            </div>

        </div>

        {{!-- If is guest --> no see any buttons --}}
        {{#if user}}
        <div class="product-actions">

            {{!-- Owner of current device see edit and delete button --}}
            {{#if isOwner}}
            <button class="btn edit"><a href="/devices/{{device.id}}/edit">Edit</a></button>
            <button class="btn delete"><a href="/devices/{{device.id}}/delete">Delete</a></button>
            {{else}}

            {{#if isPreferred}}
            {{!-- User who has already preferred this device --> see only this paragraph --}}
            <p class="prefer-message">You've already preferred this device</p>
            {{else}}
            {{!-- User but NO owner and NO prefer this device --> see prefer button --}}
            <button class="btn prefer"><a href="/devices/{{device.id}}/prefer">Prefer</a></button>
            {{/if}}

            {{/if}}
        </div>
        {{/if}}

    </div>
</section>